<h3> Agregar nueva imagen </h3>

<%= form_for [:admins, @image_part], multipart: true, html: { class: "form-horizontal" } do |f|%>

<div class="form-group">
  <%= f.label :type, "Tipo", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.select :type, ImagePart::TYPES %>
  </div>
</div>

<div class="form-group">
  <%= f.label :image, "Imagen", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.file_field :image %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Guardar", class: 'btn btn-primary' %>
  </div>
</div>

<% end %>
