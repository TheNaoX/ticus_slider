<% if alert %>
<div class="alert alert-danger">
  <button type="button" class="close" data-dismiss="alert"> &times;</button>
  <%= alert %>
</div>
<% end %>

<% if notice %>
<div class="alert alert-success">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <%= notice %>
</div>
<% end %>
